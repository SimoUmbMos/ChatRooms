<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffffff"
    android:layout_height="250dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/a"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        app:srcCompat="@mipmap/dialog_create_thread_password_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_dialog"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textSize="18sp"
        android:textColor="#ff000000"
        android:gravity="center_horizontal"
        android:layout_below="@+id/a"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/text_dialog"
        android:id="@+id/et_password"
        android:layout_alignEnd="@+id/text_dialog"
        android:layout_toEndOf="@+id/textView"
        android:inputType="textPassword" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/et_password"
        android:layout_alignBottom="@+id/et_password"
        android:layout_alignStart="@+id/text_dialog"
        android:textAlignment="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"
        android:layout_above="@+id/text_dialog" />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/text_dialog" />

    <Button
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:id="@+id/btn_dialog_cancel"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffffff"
        android:backgroundTint="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:elevation="0dp"
        android:layout_height="35dp"
        android:layout_below="@+id/et_password"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:text="Next"
        android:id="@+id/btn_dialog_next"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffffff"
        android:backgroundTint="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:elevation="0dp"
        android:layout_height="35dp"
        android:layout_below="@+id/et_password"
        android:layout_alignEnd="@+id/et_password"
        android:layout_alignParentBottom="true" />

</RelativeLayout>